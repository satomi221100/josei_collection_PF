<div id="error-explanation"></div>
<% if @user.errors.any? %>
  <%= @user.errors.count %>件のerrorが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>
<div class='container px-5 px-sm-0'>
 <div class='row'>
  <div class='col-md-3'>
<h1>User info</h1>


<%= form_with model: @user do |f| %>
  <%= f.label :Name %><br>
  <%= f.text_field :name %><br>
  <br>
  <%= f.label :image %>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>
  <br>
  <%= f.label :introduction %><br>
  <%= f.text_area :introduction %><br>
  <br>
   <%= f.submit 'Update User', class: "btn btn-secondary" %>
  <br>
 <% end %>

</div>
</div>
</div>