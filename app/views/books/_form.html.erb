<% if flash[:notice] %>
   <div class="alert">
    <%= flash[:notice] %>
   </div>
  <% end %>
  <h2>User info</h2>
  <table class='table'>
  <tr><%= image_tag user.get_profile_image(100,100) %>
    <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
</table>

<div>
<%= link_to edit_user_path(user), class:"btn btn-outline-secondary btn-block" do%>
  <i class="fas fa-user-cog"></i>
 <%end%>
 </div>

 <h2 class="mt-3">New book</h2>

<div id="error-explanation"></div>
<% if book.errors.any? %>
  <%= book.errors.count %>件のerrorが発生しました
  <ul>
    <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: book, method: :post do |f| %>
  <div class="form-group"><%= f.label :Title %>
  <%= f.text_field :title, class: "form-control"%></div>

  <div class="form-group"><%= f.label :Opinion %>
  <%= f.text_area :body, class: "form-control"%></div>

  <div class="form-group"><%= f.submit 'Create Book', class: "btn btn-success"%>
  </div><% end %>