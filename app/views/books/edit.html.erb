<div id="error-explanation"></div>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>
<div class='container px-5 px-sm-0'>
 <div class='row'>
  <div class='col-md-3'>
<h1>Editing Book</h1>
  

<%= form_with model: @book do |f| %>
  <%= f.label :Title %><br>
  <%= f.text_field :title %><br>
  <br>
  <%= f.label :Opinion %><br>
  <%= f.text_area :body %><br>
  <br>
   <%= f.submit 'Update Book' %>
  <br>
 <% end %>
  <br>
  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back", books_path %>

</div>
</div>
</div>